<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>tranhdayroi.listener.MyContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>CenterServlet</servlet-name>
        <servlet-class>tranhdayroi.servlet.CenterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PreloadServlet</servlet-name>
        <servlet-class>tranhdayroi.servlet.PreloadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintPDFServlet</servlet-name>
        <servlet-class>tranhdayroi.servlet.PrintPDFServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CenterServlet</servlet-name>
        <url-pattern>/CenterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PreloadServlet</servlet-name>
        <url-pattern>/PreloadServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintPDFServlet</servlet-name>
        <url-pattern>/PrintPDFServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>CenterServlet</welcome-file>
    </welcome-file-list>
</web-app>
